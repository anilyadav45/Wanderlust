<%- layout("/layouts/boilerplate") %>

  <body>
    <div class="edit-container">
      <h2>Edit Your Listing</h2>

      <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="edit-form">
        <input name="listing[title]" value="<%= listing.title %>" type="text" placeholder="Title" />

        <textarea name="listing[description]" placeholder="Description"><%= listing.description %></textarea>

        <input name="listing[image][url]" value="<%= listing.image.url%>" type="text" placeholder="Image URL" />

        <input name="listing[price]" value="<%= listing.price %>" type="number" placeholder="Price" />

        <input name="listing[country]" value="<%= listing.country %>" type="text" placeholder="Country" />

        <input name="listing[location]" value="<%= listing.location %>" type="text" placeholder="Location" />

        <button type="submit">Update Listing</button>
      </form>
    </div>
  </body>